{
  "manifest_version": 3,
  "name": "SmartInsight Career Assistant",
  "version": "3.0.0",
  "description": " Chrome Built-in AI powered career assistant. 100% private LinkedIn analysis with Gemini Nano. Zero cost, offline-capable, instant insights.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "notifications"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*"
  ],

  "action": {
    "default_popup": "popup.html"
  }, 
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/storage/database.js",
        "src/ai/chrome-ai-manager.js",
        "src/ui/chrome-ai-setup-guide.js",
        "demo-comparison.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "offline_enabled": true,

  "minimum_chrome_version": "127"
}
